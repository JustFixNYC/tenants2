{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.0.json",
  "title": "Issues per area",
  "data": {
    "url": "dataset:issuestats"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "count",
      "type": "quantitative",
      "title": "number of issues"
    },
    "y": { "field": "area", "type": "nominal" }
  }
}
